<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kutuphaneyonetimsistemi.ui.controller.KitapYonetimiController">
    <children>
        <SplitPane dividerPositions="0.35" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" style="-fx-background-color: #f4f4f4;">
                    <children>
                        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                            <children>
                                <Label text="Kitap Bilgileri" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label text="Kitap Adı:" />
                                <TextField fx:id="txtAd" promptText="Örn: Sefiller" />

                                <Label text="Yazar:" />
                                <TextField fx:id="txtYazar" promptText="Örn: Victor Hugo" />

                                <Label text="Yayınevi:" />
                                <TextField fx:id="txtYayinevi" promptText="Örn: İş Bankası" />

                                <Label text="Baskı Yılı:" />
                                <TextField fx:id="txtYil" promptText="2023" />

                                <Label text="Adet:" />
                                <TextField fx:id="txtAdet" promptText="1" />

                                <Label text="Raf Numarası:" />
                                <TextField fx:id="txtRaf" promptText="A-5" />

                                <Label text="Açıklama:" />
                                <TextField fx:id="txtAciklama" promptText="Kısa açıklama..." />

                                <Label text="ISBN:" />
                                <TextField fx:id="txtISBN" promptText="978-..." />

                                <Label text="Kategori:" />
                                <TextField fx:id="txtKategori" promptText="Roman, Bilim..." />

                                <HBox spacing="10.0" alignment="CENTER">
                                    <children>
                                        <Button fx:id="btnEkle" mnemonicParsing="false" onAction="#handleEkle" prefWidth="80.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Ekle" />
                                        <Button fx:id="btnGuncelle" mnemonicParsing="false" onAction="#handleGuncelle" prefWidth="80.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Güncelle" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnSil" mnemonicParsing="false" onAction="#handleSil" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sil" />
                                        <Button fx:id="btnTemizle" mnemonicParsing="false" onAction="#handleTemizle" prefWidth="80.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Temizle" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Label text="Kitap Listesi" textFill="#2c3e50">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="10.0" top="10.0" />
                                    </VBox.margin>
                                </Label>

                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Ara:" />
                                        <ComboBox fx:id="cmbAramaKriteri" prefWidth="150.0" promptText="Kriter Seçin" />
                                        <TextField fx:id="txtAramaMetni" prefWidth="320.0" promptText="Arama metnini girin" />
                                        <Button mnemonicParsing="false" onAction="#handleListeYenile" text="Yenile" />
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                                    </VBox.margin>
                                </HBox>

                                <TableView fx:id="tabloKitaplar" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                                        <TableColumn fx:id="colAd" prefWidth="150.0" text="Kitap Adı" />
                                        <TableColumn fx:id="colYazar" prefWidth="120.0" text="Yazar" />
                                        <TableColumn fx:id="colYayinevi" prefWidth="100.0" text="Yayınevi" />
                                        <TableColumn fx:id="colISBN" prefWidth="100.0" text="ISBN" />
                                        <TableColumn fx:id="colDurum" prefWidth="80.0" text="Durum" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>